method 1
brute force
#include<bits/stdc++.h>
using namespace std;
int number_of_inversion(int arr[],int n)
{
    int count=0;
    for(int i=0;i<n-1;i++)
    {
        for(int j=i+1;j<n;j++)
        {
            if(arr[i]>arr[j])
            count++;
        }
    }
    return count;
}

int main()
{
    int arr[4]={8,4,2,1};
    int size=4;
    cout<<number_of_inversion(arr,size);
    return 0;
}
